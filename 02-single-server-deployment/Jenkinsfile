pipeline {
    agent any

    environment {
        SERVER_IP = credentials('prod-vm-ip')
    }

    stages {
        stage('Setup') {
            steps {
                sh "pip install -r requirements.txt"
            }
        }

        stage('Test') {
            steps {
                sh "pytest"
            }
        }

        stage('Package code') {
            steps {
                sh "zip -r myapp.zip ./* -x '*.git*'"
                sh "ls -lart"
            }
        }

        stage('Deploy to Prod') {
            steps {
                // Use usernamePassword credentials type instead of sshUserPrivateKey
                withCredentials([usernamePassword(credentialsId: 'your-credentials-id', passwordVariable: 'PASSWORD', usernameVariable: 'USERNAME')]) {
                    sh '''
                    # Ensure sshpass is installed on the server you're deploying to
                    # SCP the zipped application to the server
                    sshpass -p $PASSWORD scp -o StrictHostKeyChecking=no myapp.zip ${USERNAME}@${SERVER_IP}:/home/azureuser/

                    # SSH into the server, unzip, install requirements and restart the service
                    sshpass -p $PASSWORD ssh -o StrictHostKeyChecking=no ${USERNAME}@${SERVER_IP} << EOF
                        unzip -o /home/azureuser/myapp.zip -d /home/azureuser/app/
                        source /home/azureuser/app/venv/bin/activate
                        cd /home/azureuser/app/
                        pip install -r requirements.txt
                        sudo systemctl restart flaskapp.service
EOF
                    '''
                }
            }
        }
    }
}
